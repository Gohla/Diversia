
module DiversiaScript-Builders

imports DiversiaScript-Builders.generated

builders
                                                                      
  // This file can be used for custom analysis and builder rules.     
  //                                                                  
  // See the imported file for a brief introduction and examples.     

builders
                                                                                                                               
  provider                  : include/diversiascript.ctree                                                                     
  provider                  : include/diversiascript-java.jar
  
  observer					: editor-analyze
  
  builder                   : "Show abstract syntax" = generate-aterm (openeditor) (realtime) (meta) (source)
  builder                   : "Generate Lua files" = generate-lua-files (openeditor) (realtime)                                                                                                                                      
  builder                   : "Generate Lua code" = generate-lua-strings (openeditor) (realtime)
  builder                   : "Generate Lua abstract syntax" = generate-lua-aterm (openeditor) (realtime)
  builder                   : "Generate C++ code" = generate-cpp (openeditor) (realtime)                                                                                           