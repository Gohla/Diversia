def Test {
	Position = [0, 0.5, 0]
	
    component Mesh {
        ShapeType = "Mesh"
        ShapeFile = "Landmine.mesh"
    }
    component Entity {
        Material = "Landmine"
    }
    component CollisionShape {
        ShapeType = "Mesh"
        ShapeFile = "Landmine.bullet"
    }
    component RigidBody {
        PhysicsType = "Dynamic"
        Restitution = 0.3
        LinearDampening = 0.7
        AngularDampening = 0.7
    }
    
    var Bla : Int = 0;
    var Test : Degree;
    
    on Create() {
    	Bla = 1;
    }
    on Update() {
    	Bla++;
    	Test = Degree(0);
    }
    
    default state TestState1 {
    	Position = [0, 10, 0]
    	
	    on Update() {
	    	Bla = --Bla + 1;
	    	Test = Degree(10);
	    }
	    on Frame(TimeElapsed) {
	    	Bla = Bla / 3;
	    }    	
    }
    state TestState2 {
	    component Entity {
        	Material = "Landmine"
    	}
    	
		on Update(){
	    	Bla = Bla * 3;
	    	Test = Degree(20);
	    }
	    on Frame(TimeElapsed) {
	    	Bla = Bla + 4;
	    }
	    on Destroy() {
	    	Bla = 0;
	    }
    }
    state TestState3 {
    	on StateEnter {
    		++Bla;
    	}
    	on StateExit {
    		--Bla;
    	}
    }
}