plugin Sky {
	
}

def Test {
	Position = [0, 0.5, 0]
	
    component Mesh {
        ShapeType = "Mesh"
        ShapeFile = "Landmine.mesh"
    }
    component TEST : CollisionShape {
        ShapeType = "Mesh"
        ShapeFile = "Landmine.bullet"
    }
    component RigidBody {
        PhysicsType = "Dynamic"
        Restitution = 0.3
        LinearDampening = 0.7
        AngularDampening = 0.7
    }
    
    var Bla : Int = 0;
    var Test : Degree = Degree(0);
    prop Zomg : Int = 1;
    
    on Create() {
    	Bla = 1;
    	
	    in 2 seconds {
            Bla = 42;
        }
    }
    on Update() {
    	Bla++;
    	Test = Degree(0);
    }
    
    default state TestState1 {
    	Position = [0, 10, 0]
    	
    	var Bla : Int = 0;
    	
	    on Update() {
	    	Zomg = 42;
	    	Bla = --Bla + 1;
	    	Test = Degree(10);
	    	Position = [1, 2, 3];
	    }
	    on Frame(TimeElapsed) {
	    	Bla = Bla / 3;
	    	Scale = [2, 2, 2];
	    	
	    	setstate TestState2;
	    }    	
    }
    state TestState2 {
	    component LOL : Entity {
        	Material = "Landmine"
    	}
    	
		on Update(){
	    	Bla = Bla * 3;
	    	Test = Degree(20);
	    	Position = [3, 4, 5];
	    }
	    on Frame(TimeElapsed) {
	    	Bla = Bla + 4;
	    	Scale = [3, 3, 3];
	    	
	    	setstate TestState3;
	    }
	    on Destroy() {
	    	Bla = 0;
	    }
    }
    state TestState3 {
    	on StateEnter {
    		++Bla;
    		
    		setstate TestState1;
    	}
    	on StateExit {
    		--Bla;
    	}
    }
}

